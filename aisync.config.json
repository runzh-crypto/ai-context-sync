{
  "sources": [
    "./global_rules.md",
    "./global_mcp.json"
  ],
  "targets": [
    {
      "name": "kiro",
      "type": "kiro",
      "path": ".",
      "mapping": [
        {
          "source": "global_rules.md",
          "destination": ".kiro/steering/rules.md"
        },
        {
          "source": "global_mcp.json",
          "destination": ".kiro/settings/mcp.json"
        }
      ],
      "enabled": true
    },
    {
      "name": "cursor",
      "type": "cursor",
      "path": ".",
      "mapping": [
        {
          "source": "global_rules.md",
          "destination": ".cursor/rules"
        }
      ],
      "enabled": true
    },
    {
      "name": "vscode",
      "type": "vscode",
      "path": ".",
      "mapping": [
        {
          "source": "global_rules.md",
          "destination": ".vscode/copilot-instructions.md"
        }
      ],
      "enabled": true
    },
    {
      "name": "claude-code",
      "type": "claude-code",
      "path": ".",
      "mapping": [
        {
          "source": "global_rules.md",
          "destination": ".claude/instructions.md"
        }
      ],
      "enabled": false
    },
    {
      "name": "gemini-code-assist",
      "type": "gemini-cli",
      "path": ".",
      "mapping": [
        {
          "source": "global_mcp.json",
          "destination": ".gemini/mcp-config.json"
        }
      ],
      "enabled": false
    }
  ],
  "mode": "incremental",
  "global": {
    "rulesFile": "global_rules.md",
    "mcpFile": "global_mcp.json"
  }
}