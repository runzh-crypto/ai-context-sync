{
  "sources": [
    "./global_rules.md",
    "./global_mcp.json"
  ],
  "targets": [
    {
      "name": "kiro",
      "type": "kiro",
      "path": ".",
      "enabled": true,
      "mapping": [
        {
          "source": "global_rules.md",
          "destination": ".kiro/steering/rules.md"
        },
        {
          "source": "global_mcp.json",
          "destination": ".kiro/settings/mcp.json"
        }
      ]
    },
    {
      "name": "cursor",
      "type": "cursor",
      "path": ".",
      "enabled": true,
      "mapping": [
        {
          "source": "global_rules.md",
          "destination": ".cursor/rules/global_rules.md"
        }
      ]
    },
    {
      "name": "vscode",
      "type": "vscode",
      "path": ".",
      "enabled": true,
      "mapping": [
        {
          "source": "global_rules.md",
          "destination": ".vscode/instructions.md"
        }
      ]
    }
  ],
  "mode": "incremental",
  "watch": {
    "enabled": false,
    "interval": 1000,
    "debounce": 500
  },
  "global": {
    "rulesFile": "global_rules.md",
    "mcpFile": "global_mcp.json"
  }
}